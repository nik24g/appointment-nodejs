        align-items: center;
        justify-content: space-between;
        width: 800px;
        border: 3px solid #d1d1d1;
        margin: auto;
        font-size: 37px;
        padding: 8px;
        background-color: white;
        border-radius: 15px;
        margin: 15px 0px;
    }
</style>

<div class="parent-container">
    {{#each salons}}
    <a href="/salon/{{this.id}}">
        <div class="a-container">            
            <div class="aname">
                <span>{{this.name}}</span>
            </div>
        </div>
    </a>
    {{/each}}
</div>

    


