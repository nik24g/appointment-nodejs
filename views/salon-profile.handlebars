<style>
  a {
    text-decoration: none;
    color: black;
  }

  body {
    font-family: 'Baloo Bhai 2', cursive;
  }

  .upperbody {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0px 27px;
    flex-wrap: wrap;
  }

  .a-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 800px;
    border: 3px solid #d1d1d1;
    margin: auto;
    font-size: 37px;
    padding: 8px;
    background-color: white;
    border-radius: 15px;
    margin: 15px 0px;
  }



  .contactbody h3 {
    width: fit-content;
    margin: auto;
  }

  .contactbody {
    grid-area: contactbody;
    height: fit-content;
    background-color: whitesmoke;
    box-shadow: 0px 0px 3px 4px grey;
    width: 450px;
    padding: 10px;
    margin: 25px;
  }

  .btn {
    height: 30px;
    line-height: 1;
  }

  .container {
    padding: 15px 40px;
    background: rgb(206, 206, 206);
    border-radius: 12px;
    width: 255px;
  }

  h3 {
    width: fit-content;
    margin: auto;
  }

  label {
    width: fit-content !important;
  }
</style>
<div class="upperbody">
  <a href="#">
    <div class="a-container">
      <div class="aname">
        <span>{{currentUser/name}}</span>
      </div>
    </div>
  </a>
  <div class="contactbody">
    <h3>Details</h3>
    <div class="manager">Username: {{currentUser/username}}</div>
    <div class="manager">Owner's name: {{currentUser/owner_name}}</div>
    <div class="phone">Email: {{currentUser/email}}</div>
    <div class="phone">Address: {{currentUser/address}}</div>
    <div class="phone">Phone: {{currentUser/phone}}</div>
  </div>
  <div class="container my-3">
    <h3>Default Details</h3>
    <form action="/salon/profile/default" method="post">
      <div class="mb-3 row my-4">
        <label for="staticEmail" class="col-sm-2 col-form-label">Work Hour: </label>
        <div class="col-sm-10">
          <input type="number" min="3" max="12" class="form-control" id="staticEmail" name="work_hour"
            value="{{default_work_hour}}" required>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Sitting Count: </label>
        <div class="col-sm-10">
          <input type="number" min="1" max="10" class="form-control" id="staticEmail" name="count"
            value="{{sitting_count}}" required>
        </div>
      </div>

      <div class="d-grid gap-2 col-6 mx-auto">
        <button class="btn btn-outline-primary" type="submit">Change</button>
      </div>
    </form>
  </div>
</div>