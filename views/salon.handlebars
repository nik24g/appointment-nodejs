<style>
    a{
        text-decoration: none;
        color: black;
    }
    body{
        font-family: 'Baloo Bhai 2', cursive;
    }
    .a-container{
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 800px;
        border: 3px solid #d1d1d1;
        margin: auto;
        font-size: 37px;
        padding: 8px;
        background-color: white;
        border-radius: 15px;
        margin: 15px 0px;
    }
    .midbody{
        display: grid;
        grid-template-columns: 3fr 1fr;
        grid-template-areas: 
        "dishbody contactbody"
        "dishbody contactbody"
        ;
    }
    .dishbody{
        grid-area: dishbody;
        /* width: 50%; */
        background-color: #cfcfcf;
        margin: 21px 30px;
        border-radius: 13px;
        box-shadow: 0px 0px 3px 4px grey;
        padding: 12px;
    }
    .dishbody h3, .contactbody h3{
        width: fit-content;
        margin: auto;
    }
    .dishitem{
        display: flex;
        justify-content: space-between;
        border: 2px solid grey;
        border-radius: 10px;
        background-color: whitesmoke;
        padding: 10px;
        font-size: larger;
        margin: 13px 0px;
    }
    .available{
        color: green;
    }
    .unavailable{
        color: red;
    }
    .contactbody{
        grid-area: contactbody;
        height: fit-content;
        background-color: whitesmoke;
        box-shadow: 0px 0px 3px 4px grey;
        width: 450px;
        padding: 10px;
        margin: 25px;
    }
    .btn{
        height: 30px;
        line-height: 1;
    }
</style>
<a href="#">
    <div class="a-container">        
        <div class="aname">
            <span>{{salon/name}}</span>
        </div>
    </div>
</a>
<div class="midbody">
    <div class="dishbody">
        <h3>Timings</h3>
        {{#each timings}}
            <div class="dishitem">
                <div class="name">{{this/time}}</div>
                {{#if available}}
                    <div class="available">Available</div>
                    <button type="button" class="btn btn-outline-secondary">Request</button>
                {{else}}
                    <div class="unavailable">Unavailable</div>
                    <button type="button" class="btn btn-outline-secondary disabled">Request</button>
                {{/if}}
            </div> 
        {{/each}} 
    </div>

    <div class="contactbody">
        <h3>Contact</h3>
        <div class="manager">Owner's name: {{salon/owner_name}}</div>
        <div class="phone">Email: {{salon/email}}</div>
        <div class="phone">Phone: {{salon/phone}}</div>
    </div>
</div>
