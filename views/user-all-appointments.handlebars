<style>
    body {
        font-family: 'Baloo Bhai 2', cursive;
    }

    .midbody {
        display: grid;
        grid-template-columns: 3fr 1fr;
        grid-template-areas:
            "dishbody notibody"
            "dishbody contactbody"
        ;
    }

    .dishbody {
        grid-area: dishbody;
        /* width: 50%; */
        background-color: #cfcfcf;
        margin: 21px 30px;
        border-radius: 13px;
        box-shadow: 0px 0px 3px 4px grey;
        padding: 12px;
    }
    
    .dishbody h3{
        width: fit-content;
        margin: auto;
    }

    .dishitem {
        display: flex;
        justify-content: space-between;
        border: 2px solid grey;
        border-radius: 10px;
        background-color: whitesmoke;
        padding: 10px;
        font-size: larger;
        margin: 13px 0px;
    }

    .contactbody {
        grid-area: contactbody;
        height: fit-content;
        background-color: whitesmoke;
        box-shadow: 0px 0px 3px 4px grey;
        width: 450px;
        padding: 10px;
        margin: 25px;
    }
    .available {
        color: #198754;
    }

    .unavailable {
        color: #0d6efd;
    }
    .btn {
        height: 30px;
        line-height: 1;
    }
    .status img{
        width: 15px;
    }

</style>

<div class="midbody">
    <div class="dishbody">
        <h3>Appointments</h3>
        {{#each appointments}}
        <a href="/user/appointment/{{this/id}}" class="dishitem">
            <div class="name">{{this/date}}</div>
            <div class="name">{{this/slot_time}}</div>
            {{#ifEquals this/status "accepted"}}
            <div class="status">Active <img src="/static/images/green-dot.png" alt="active"></div>
            {{/ifEquals}}
            {{#ifEquals this/status "pending"}}
                <div class="status">Pending <img src="/static/images/yellow-dot.ico" alt="pending"></div>
            {{/ifEquals}}
            {{#ifEquals this/status "declined"}}
                <div class="status">Declined <img src="/static/images/red-dot.ico" alt="declined"></div>
            {{/ifEquals}}
            {{#ifEquals this/status "completed"}}
                <div class="status">Completed <img src="/static/images/blue-dot.ico" alt="completed"></div>
            {{/ifEquals}}
        </a>
        {{/each}}
    </div>
</div>
